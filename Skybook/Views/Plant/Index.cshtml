@model IEnumerable<Skybook.Models.Plant.PlantListItem>

@{
    ViewBag.Title = "Index";
}

<h2 style="color: #C0C0C0">Plants</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="color: #C0C0C0" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryElement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondaryElement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlanetId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlantId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryElement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondaryElement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlanetId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PlantId }) |
            @Html.ActionLink("Details", "Details", new { id = item.PlantId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PlantId })
        </td>
    </tr>
}

</table>
