@model IEnumerable<Skybook.Models.Planet.PlanetListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlanetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Minerals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialBuried)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SentinelActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StarSystemId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlanetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlanetType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minerals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialBuried)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SentinelActivity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StarSystemId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PlanetId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PlanetId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PlanetId })
                </td>
            </tr>
        }

    </table>
