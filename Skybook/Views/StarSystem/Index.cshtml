@model IEnumerable<Skybook.Models.StarSystemListItem>

@{
    ViewBag.Title = "Index";
}

<h2 style="color: #C0C0C0">Star Systems</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    @if (TempData.ContainsKey("SaveResult"))
    {
<div style="color: #C0C0C0" class="alert alert-success fade in" role="alert">
    @ViewBag.SaveResult
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
</div>
    }
<table style="color: #C0C0C0" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StarSystemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Race)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Economy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Conflict)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StarSystemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Economy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conflict)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StarSystemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.StarSystemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StarSystemId })
            </td>
        </tr>
    }

</table>
