</p>

<h4 style="color: #C0C0C0">@Html.DisplayNameFor(model => model.Planets) </h4>
<table style="color: #C0C0C0" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlanetId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlanetType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Minerals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecialBuried)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentinelActivity)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Planets) { 
    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Minerals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialBuried)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentinelActivity)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", "Planet", new { id = item.PlanetId }, null) |
                @Html.ActionLink("Details", "Details", "Planet", new { id = item.PlanetId }, null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PlanetId })
            </td>
        </tr>
    
    }
</table>