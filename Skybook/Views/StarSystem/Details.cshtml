}

<h2 style="color: #C0C0C0">Star System Details</h2>

<div>
    
    <hr />
    <dl style="color: #C0C0C0" class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StarSystemId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StarSystemId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
