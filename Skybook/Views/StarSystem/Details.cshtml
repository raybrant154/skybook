        <dd>
            @Html.DisplayFor(model => model.Race)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Economy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Economy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Conflict)
